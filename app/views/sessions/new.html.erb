<h1>Login</h1>

<%= form_tag '/login' do %>

<div class = "row">
  <div class="col-sm-6 col-sm-offset-1">
  <div class="form-group">
  Email:
  <br>
  <%= text_field_tag :email %>
  </div>
   <div class="form-group">
  Password:
  <br> 
  <%= password_field_tag :password %>
  </div>
  <br>
  <%= submit_tag "Submit"%>
  </div>
</div>


<% end %>