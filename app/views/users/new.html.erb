<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>


<div class = "row">
  <div class="col-sm-6 col-sm-offset-1">
  <div class="form-group">
  Name: 
  <br>
  <%= f.text_field :name %>
  </div>
  <div class="form-group">
  Email: 
  <br>
  <%= f.text_field :email %>
  </div>
  <div class="form-group">
  Password:
  <br> 
  <%= f.password_field :password %>
  </div>
  <div class="form-group">
  Password Confirmation: 
  <br>
  <%= f.password_field :password_confirmation %>
  </div>
  <br>
  <%= f.submit "Submit" %>
  </div>
</div>

<% end %>